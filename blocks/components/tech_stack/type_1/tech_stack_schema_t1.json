{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Tech Stack Component Schema",
    "description": "Displays technology stack as compact inline tags organized by categories",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "description": "Section title displayed in header",
            "default": "Technology Stack"
        },
        "showTitle": {
            "type": "boolean",
            "description": "Whether to show the section title",
            "default": true
        },
        "labelWidth": {
            "type": "string",
            "description": "CSS width for category labels (e.g., '120px', '150px')",
            "default": "120px"
        },
        "categories": {
            "type": "array",
            "description": "Technology categories to display",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Category name (e.g., Frontend, Backend, DevOps)"
                    },
                    "icon": {
                        "type": "string",
                        "description": "Ionicon name for category label",
                        "default": "cube-outline"
                    },
                    "technologies": {
                        "type": "array",
                        "description": "List of technologies in this category",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Technology name"
                                },
                                "version": {
                                    "type": "string",
                                    "description": "Optional version number"
                                }
                            },
                            "required": ["name"]
                        }
                    }
                },
                "required": ["name", "technologies"]
            }
        }
    },
    "required": ["categories"],
    "examples": [
        {
            "title": "Technology Stack",
            "categories": [
                {
                    "name": "Backend",
                    "icon": "server-outline",
                    "technologies": [
                        { "name": "PHP", "version": "8.2" },
                        { "name": "Node.js", "version": "20" }
                    ]
                },
                {
                    "name": "Frontend",
                    "icon": "desktop-outline",
                    "technologies": [
                        { "name": "JavaScript" },
                        { "name": "CSS3" },
                        { "name": "HTML5" }
                    ]
                }
            ]
        },
        {
            "showTitle": false,
            "labelWidth": "100px",
            "categories": [
                {
                    "name": "Languages",
                    "icon": "code-outline",
                    "technologies": [
                        { "name": "Python" },
                        { "name": "Go" },
                        { "name": "Rust" }
                    ]
                }
            ]
        }
    ]
}
