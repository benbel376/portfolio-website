      "required": true,
      "description": "Project description"
    },
    "image": {
      "type": "string",
      "required": false,
      "description": "Path to project banner/hero image"
    },
    "technologies": {
      "type": "array",
      "required": false,
      "description": "Technologies used",
      "items": { "type": "string" }
    },
    "features": {
      "type": "array",
      "required": false,
      "description": "Key features list",
      "items": { "type": "string" }
    },
    "challenges": {
      "type": "string",
      "required": false,
      "description": "Challenges faced"
    },
    "solution": {
      "type": "string",
      "required": false,
      "description": "Solution implemented"
    },
    "results": {
      "type": "string",
      "required": false,
      "description": "Results achieved"
    },
    "github": {
      "type": "string",
      "required": false,
      "description": "GitHub repository URL"
    },
    "demo": {
      "type": "string",
      "required": false,
      "description": "Live demo URL"
    },
    "date": {
      "type": "string",
      "required": false,
      "description": "Project date (ISO format)",
      "format": "date"
    }
  }
}
