  "example": {
    "name": "AI Platform",
    "description": "End-to-end machine learning platform for automated model training and deployment.",
    "image": "definitions/media/projects/ai_platform_banner.png",
    "technologies": ["Python", "TensorFlow", "AWS", "Docker"],
    "features": [
      "Automated model training pipeline",
      "Real-time inference API",
      "Model versioning and rollback"
    ],
    "challenges": "Scaling to handle 1M+ predictions per day while maintaining low latency.",
