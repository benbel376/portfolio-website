{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Coding Stats Component Data Schema",
    "description": "Schema for coding practice statistics (LeetCode, HackerRank, etc.)",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "description": "Component title override",
            "default": "Coding Practice"
        },
        "subtitle": {
            "type": "string",
            "description": "Component subtitle override",
            "default": "Problem solving and algorithmic skills"
        },
        "platform": {
            "type": "string",
            "description": "Platform name (e.g., LeetCode, HackerRank)",
            "default": "LeetCode"
        },
        "username": {
            "type": "string",
            "description": "Username on the platform"
        },
        "profileUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL to the user's profile"
        },
        "platformLogo": {
            "type": "string",
            "description": "URL or path to platform logo image"
        },
        "stats": {
            "type": "object",
            "description": "Statistics data",
            "properties": {
                "totalSolved": {
                    "type": "integer",
                    "description": "Total problems solved",
                    "minimum": 0
                },
                "easy": {
                    "type": "object",
                    "properties": {
                        "solved": { "type": "integer", "minimum": 0 },
                        "total": { "type": "integer", "minimum": 0 }
                    },
                    "required": ["solved", "total"]
                },
                "medium": {
                    "type": "object",
                    "properties": {
                        "solved": { "type": "integer", "minimum": 0 },
                        "total": { "type": "integer", "minimum": 0 }
                    },
                    "required": ["solved", "total"]
                },
                "hard": {
                    "type": "object",
                    "properties": {
                        "solved": { "type": "integer", "minimum": 0 },
                        "total": { "type": "integer", "minimum": 0 }
                    },
                    "required": ["solved", "total"]
                },
                "acceptanceRate": {
                    "type": "string",
                    "description": "Acceptance rate percentage (e.g., '65%')"
                },
                "ranking": {
                    "type": "integer",
                    "description": "Global ranking",
                    "minimum": 1
                },
                "contestRating": {
                    "type": "integer",
                    "description": "Contest rating score"
                },
                "streak": {
                    "type": "integer",
                    "description": "Current day streak",
                    "minimum": 0
                }
            }
        },
        "badges": {
            "type": "array",
            "description": "List of achievements/badges",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["platform", "stats"]
}
